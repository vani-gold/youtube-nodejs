  <div class="todo-container">
    <a href="/resume"> <h2>GO to my template</h2></a>

    <input type="color" id="colorID" oninput="changeColor()">

    <div class="todo">
      <form action="/" method="POST" class="todo-header">
        <input class="todo_input" type="text" name="content" />
        <button type="submit">
          <span class="fas fa-plus"></span>
        </button>
      </form>
 
      <ul class="todo-list">
        <% todoTasks.forEach(details => { %>
        <li  class="todo-list-item">
          <!-- <P><%= details.content %></P> -->
          <div class="todo-list-item-name"><%= details.content %></div>
          <a href="/edit/<%= details._id %>" class="edit">
            <span class="fas fa-edit"></span>
          </a>
          <a href="/remove/<%= details._id %>" class="remove">
            <span class="fas fa-times"></span>
          </a>
        </li>
        <% }) %>
      </ul>
    </div>
